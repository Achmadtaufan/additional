CASE 
    WHEN placeofbirth IS NULL THEN NULL
    ELSE
        CAST(
            (
                SELECT REPLACE(REPLACE(REPLACE(
                    placeofbirth, CHAR(13), ''), CHAR(10), ''), CHAR(160), ''
                ) AS [text()]
                FOR XML PATH(''), TYPE
            ).value('.', 'nvarchar(max)')
        AS NVARCHAR(100))
END AS placeofbirth