-- Membuat temporary table untuk menyimpan nama link server
CREATE TABLE #LinkServers (LinkServerName NVARCHAR(100))

-- Memasukkan nama link server yang dimiliki oleh server idnlolita ke dalam temporary table
INSERT INTO #LinkServers (LinkServerName)
SELECT name
FROM sys.servers
WHERE is_linked = 1

-- Membuat temporary table untuk menyimpan hasil pencarian objek
CREATE TABLE #ObjectsWithLinkServer (DatabaseName NVARCHAR(100), ObjectName NVARCHAR(100), ObjectType NVARCHAR(50), LinkServerUsed NVARCHAR(100))

-- Membuat temporary table untuk menyimpan database yang dapat diakses oleh user svc_dwh
CREATE TABLE #AccessibleDatabases (DatabaseName NVARCHAR(100))

-- Memasukkan nama database yang dapat diakses oleh user svc_dwh ke dalam temporary table
INSERT INTO #AccessibleDatabases (DatabaseName)
SELECT d.name
FROM sys.databases d
WHERE NOT EXISTS (
    SELECT 1
    FROM sys.database_principals dp
    JOIN sys.server_principals sp ON dp.sid = sp.sid
    WHERE dp.name = 'svc_dwh' AND sp.type_desc = 'SQL_USER'
    ) OR NOT EXISTS (
    SELECT 1
    FROM sys.database_role_members drm
    JOIN sys.database_principals dp ON drm.member_principal_id = dp.principal_id
    JOIN sys.server_principals sp ON dp.sid = sp.sid
    WHERE sp.name = 'svc_dwh'
    )

-- Loop melalui setiap database yang dapat diakses oleh user svc_dwh untuk mencari objek yang menggunakan nama link server
DECLARE @DatabaseName NVARCHAR(100)
DECLARE db_cursor CURSOR FOR
SELECT name
FROM sys.databases
WHERE state_desc = 'ONLINE' AND name NOT IN (SELECT DatabaseName FROM #AccessibleDatabases)

OPEN db_cursor
FETCH NEXT FROM db_cursor INTO @DatabaseName

WHILE @@FETCH_STATUS = 0
BEGIN
    -- Loop melalui setiap objek dalam setiap database
    DECLARE @ObjectType NVARCHAR(50)
    DECLARE type_cursor CURSOR FOR
    SELECT DISTINCT type_desc
    FROM sys.objects
    WHERE type IN ('V', 'FN', 'IF')

    OPEN type_cursor
    FETCH NEXT FROM type_cursor INTO @ObjectType

    WHILE @@FETCH_STATUS = 0
    BEGIN
        -- Mencari objek sesuai jenis yang sedang diproses
        DECLARE @ObjectName NVARCHAR(100)
        DECLARE obj_cursor CURSOR FOR
        SELECT name
        FROM sys.objects
        WHERE type_desc = @ObjectType

        OPEN obj_cursor
        FETCH NEXT FROM obj_cursor INTO @ObjectName

        WHILE @@FETCH_STATUS = 0
        BEGIN
            DECLARE @ObjectScript NVARCHAR(MAX)

            SET @ObjectScript = (
                SELECT OBJECT_DEFINITION(OBJECT_ID(QUOTENAME(s.name) + '.' + QUOTENAME(o.name)))
                FROM sys.objects o
                INNER JOIN sys.schemas s ON o.schema_id = s.schema_id
                WHERE o.name = @ObjectName AND s.name = 'dbo' -- Sesuaikan dengan skema Anda
            )

            IF @ObjectScript IS NOT NULL
            BEGIN
                DECLARE @LinkServerName NVARCHAR(100)
                DECLARE link_cursor CURSOR FOR
                SELECT LinkServerName
                FROM #LinkServers

                OPEN link_cursor
                FETCH NEXT FROM link_cursor INTO @LinkServerName

                WHILE @@FETCH_STATUS = 0
                BEGIN
                    IF CHARINDEX(@LinkServerName, @ObjectScript) > 0
                    BEGIN
                        INSERT INTO #ObjectsWithLinkServer (DatabaseName, ObjectName, ObjectType, LinkServerUsed)
                        VALUES (@DatabaseName, @ObjectName, @ObjectType, @LinkServerName)
                    END

                    FETCH NEXT FROM link_cursor INTO @LinkServerName
                END

                CLOSE link_cursor
                DEALLOCATE link_cursor
            END

            FETCH NEXT FROM obj_cursor INTO @ObjectName
        END

        CLOSE obj_cursor
        DEALLOCATE obj_cursor

        FETCH NEXT FROM type_cursor INTO @ObjectType
    END

    CLOSE type_cursor
    DEALLOCATE type_cursor

    FETCH NEXT FROM db_cursor INTO @DatabaseName
END

CLOSE db_cursor
DEALLOCATE db_cursor

-- Menampilkan hasil pencarian
SELECT *
FROM #ObjectsWithLinkServer

-- Menghapus temporary tables
DROP TABLE #LinkServers
DROP TABLE #ObjectsWithLinkServer
DROP TABLE #AccessibleDatabases
