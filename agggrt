DECLARE @cols AS NVARCHAR(MAX);
DECLARE @query AS NVARCHAR(MAX);

-- Mengambil daftar nomor urut untuk plan_type 'rider'
SELECT @cols = STRING_AGG(QUOTENAME('rider' + CAST(rn AS NVARCHAR)), ', ')
FROM (
    SELECT 
        ROW_NUMBER() OVER (PARTITION BY policy_number ORDER BY plan_code) AS rn,
        policy_number
    FROM 
        tr_policyproduct
    WHERE 
        plan_type = 'rider' AND policy_number IN (SELECT policy_number FROM #eead)  -- Filter berdasarkan daftar policy_number
) AS x;

-- Membangun query pivot secara dinamis
SET @query = N'SELECT policy_number, ' + @cols + N'
FROM 
(
    SELECT 
        policy_number,
        plan_code,
        ROW_NUMBER() OVER (PARTITION BY policy_number ORDER BY plan_code) AS rn
    FROM 
        tr_policyproduct
    WHERE 
        plan_type = ''rider'' AND policy_number IN (SELECT policy_number FROM #eead)  -- Filter berdasarkan daftar policy_number
) AS src
PIVOT 
(
    MAX(plan_code) 
    FOR rn IN (' + @cols + N')
) AS pvt
ORDER BY policy_number;';

-- Menjalankan query yang telah dibangun
EXEC sp_executesql @query;
