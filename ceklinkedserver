DECLARE @UserName NVARCHAR(128) = 'svc_dwh';
DECLARE @SQL NVARCHAR(MAX);

SET @SQL = '';

-- Kumpulkan nama semua database kecuali sistem database
SELECT @SQL = @SQL + '
BEGIN TRY
    USE [' + name + '];
    EXECUTE AS LOGIN = ''' + @UserName + ''';

    -- Pastikan user memiliki akses ke database
    IF HAS_DBACCESS(DB_NAME()) = 1
    BEGIN
        IF EXISTS (SELECT 1 FROM sys.database_principals WHERE name = ''' + @UserName + ''')
        BEGIN
            WITH LinkServerCTE AS (
                SELECT name AS LinkServerName
                FROM sys.servers
                WHERE is_linked = 1
            )
            SELECT 
                DB_NAME() AS DatabaseName,
                o.name AS ObjectName,
                o.type_desc AS ObjectType,
                m.definition AS ObjectDefinition,
                ls.LinkServerName
            FROM 
                sys.sql_modules AS m
                INNER JOIN sys.objects AS o ON m.object_id = o.object_id
                CROSS JOIN LinkServerCTE ls
            WHERE 
                m.definition LIKE ''%'' + ls.LinkServerName + ''%'' OR
                m.definition LIKE ''%['' + ls.LinkServerName + '']%''
            ORDER BY 
                o.type_desc,
                o.name;
        END
        ELSE
        BEGIN
            PRINT ''User ' + @UserName + ' does not exist in database [' + DB_NAME() + '].'';
        END
    END
    ELSE
    BEGIN
        PRINT ''Database [' + DB_NAME() + '] access denied for user ' + @UserName + '.';
    END
    
    REVERT;
END TRY
BEGIN CATCH
    PRINT ''Database [' + DB_NAME() + '] access denied for user ' + @UserName + '. Error: '' + ERROR_MESSAGE();
END CATCH;
' 
FROM sys.databases
WHERE name NOT IN ('master', 'tempdb', 'model', 'msdb');

-- Eksekusi SQL dinamis
EXEC sp_executesql @SQL;
